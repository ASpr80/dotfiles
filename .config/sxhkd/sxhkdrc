## global variables defined in ~/.config/bash/bash_profile

super + Return
	$TERMINAL

super + d
    	appmenu

super + shift + d
	$LAUNCHER

# super + e
#    	$EMAIL

super + w
    	$WEBBROWSER

super + shift + Return
    	$TERMINAL -e bash ~/.config/vifm/scripts/vifmrun

super + n
    	$MUSIC

super + shift + n
    	kunst --size 850x850

# super + shift + s
#    	$SOULSEEK

