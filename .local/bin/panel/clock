#!/usr/bin/sh

####################
### Clock Module ###
####################
Clock() {
    DATETIME="$(date "+%m-%d") ï€— $(date "+%H:%M")"
    echo -n "$DATETIME"
}

########################
### Echo To Lemonbar ###
########################
while true; do
        echo "%{c}%{S1} $(Clock) %{F-}%{B-}"
        sleep 1
done
