#!/usr/bin/sh

####################
### Music Module ###
####################
Music() {
    # returns nothing if no song is currently playing
    if [[ $(mpc status)  == *"paused"* ]]; then
        echo ""
    else
        currentsong=$(mpc -f '[%artist%] - [%title%]' current)
        NOWPLAYING="ï€¥ ${currentsong% (*}"
        echo "$NOWPLAYING"
    fi
}

########################
### Echo To Lemonbar ###
########################
while true; do
	echo "%{l}%{S1} $(Music) %{F-}%{B-}"
        sleep 1
done
