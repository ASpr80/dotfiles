#!/bin/sh

FONT="Monospace-14"
ICON="Font Awesome"
COLOR_BG="#FF292d3e"
COLOR_FG="#bbc5ff"
BAR_HEIGHT="34"

clock | lemonbar -p -b -d -g x$BAR_HEIGHT -f $FONT -f $ICON -B $COLOR_BG -F $COLOR_FG &
battery | lemonbar -p -b -d -g x$BAR_HEIGHT -f $FONT -f $ICON -B "#00000000" -F $COLOR_FG &
music | lemonbar -p -b -d -g x$BAR_HEIGHT -f $FONT -f $ICON -B "#00000000" -F $COLOR_FG &
