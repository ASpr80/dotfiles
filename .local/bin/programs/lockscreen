#!/bin/sh

# convert -resize 2560x ~/.config/appearance/wallpaper.png -extent 2560x1600 ~/.local/bin/programs/screensaver.png

FONT="monospace"
SIZE=32
WRONG_TEXT="dumbass!"
BACKGROUND_IMAGE=~/.config/appearance/wallpaper.png

i3lock -e -m --composite -t --{time,date,layout,verif,wrong}-font=$FONT --{layout,verif,wrong}size=$SIZE --wrongtext=$WRONG_TEXT --locktext=$LOCK_TEXT -i $BACKGROUND_IMAGE

